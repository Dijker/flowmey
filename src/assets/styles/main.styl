// Import Lato font
@import url('https://fonts.googleapis.com/css?family=Lato')

// Flexbox grid
@import 's-grid/s-grid-settings.styl'

// you can overwrite settings here


@import 's-grid/s-grid-functions.styl'
@import 's-grid/s-grid-classes.styl'

// Import variables
@import 'variables.styl'

html,body
  font-family: Lato
  color: color-dark

p
  font-size: 16px

h1
  font-size: 32px

.container
  grid()
  .sidebar
    padding rem-calc(15)
    margin rem-calc(0)
    cell(3,12,g:0)
    background-color: color-primary
    min-height 100vh
  .content
    padding rem-calc(15)
    margin rem-calc(0)
    cell(9,12,g:0)
    background-color color-white
